<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_material_dark">

    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/videoView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:background="#64000000"
        android:id="@+id/bottomPanelBackground"
        android:layout_alignParentBottom="true" />


    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:rcProgress="0.0"
        app:rcSecondaryProgress="0.0"
        app:rcRadius="0dp"
        app:rcBackgroundPadding="0dp"
        app:rcReverse="false"
        app:rcProgressColor="#ffffff"
        app:rcSecondaryProgressColor="#00000000"
        app:rcBackgroundColor="#00000000"
        android:layout_alignTop="@+id/bottomPanelBackground"
        android:id="@+id/progressBar" />



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCancelVideo"
            android:src="@drawable/btn_cancel_"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" />

        <com.wnafee.vector.MorphButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play_pause_button"
            app:vc_startDrawable="@drawable/ic_play_to_pause"
            app:vc_endDrawable="@drawable/ic_pause_to_play"
            android:background="#00000000"
            android:tint="#ffffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDoneVideo"
            android:src="@drawable/btn_done_"
            android:background="#00000000"
            android:layout_alignTop="@+id/buttonCancelVideo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp" />

    </RelativeLayout>

</RelativeLayout>